<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".userProfile">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true">
      <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/profile_image"
       android:layout_width="@dimen/_90sdp"
       android:layout_height="@dimen/_90sdp"
       android:src="@drawable/profile"
       android:layout_centerVertical="false"
       android:scaleType="centerCrop"
       android:layout_centerHorizontal="true"
       app:civ_border_width="@dimen/_1sdp"
       app:civ_border_color="#FF000000"/>
      <Button
          android:id="@+id/btn_chs_img"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/profile_image"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_100sdp"
          android:layout_marginLeft="@dimen/_100sdp"
          android:layout_marginEnd="@dimen/_100sdp"
          android:layout_marginRight="@dimen/_100sdp"
          android:background="@drawable/btn_image_choose"
          android:shadowColor="@android:color/transparent"
          android:text="Choose Photo"
          android:textAllCaps="false"
          android:textColor="#6C63FF"
          android:textSize="@dimen/_10sdp"
          android:visibility="visible" />
      <TextView
          android:id="@+id/username"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_below="@+id/btn_chs_img"
          android:paddingLeft="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:text="User Name"/>


      <EditText
          android:id="@+id/username_txt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:layout_below="@+id/username"
          android:padding="@dimen/_13sdp"
          android:backgroundTint="#6C63FF"
          android:layout_marginHorizontal="@dimen/_10sdp"
          android:drawableLeft="@drawable/user"
          android:drawablePadding="10dp"
          android:hint="UserName"
          android:textColor="#000"
          android:textColorHighlight="#6C63FF"/>
      <TextView
          android:id="@+id/email"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_below="@+id/username_txt"
          android:paddingLeft="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:text="Email Address"/>


      <EditText
          android:id="@+id/email_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:layout_below="@+id/email"
          android:padding="@dimen/_13sdp"
          android:layout_marginHorizontal="@dimen/_10sdp"
          android:drawableLeft="@drawable/mail"
          android:drawablePadding="10dp"
          android:hint="Email Address"
          android:textColor="#A9A9A9"
          android:textColorHighlight="#6C63FF" />

      <Button
          android:id="@+id/btn_submit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/email_text"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_50sdp"
          android:layout_marginLeft="@dimen/_50sdp"
          android:layout_marginEnd="@dimen/_50sdp"
          android:layout_marginRight="@dimen/_50sdp"
          android:background="@drawable/shapelogin"
          android:shadowColor="@android:color/transparent"
          android:text="Submit"
          android:letterSpacing="0.1"
          android:textAllCaps="true"
          android:textColor="#fff"
          android:textSize="@dimen/_15sdp"
          android:visibility="visible" />
   </RelativeLayout>



</RelativeLayout>